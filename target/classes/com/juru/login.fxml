<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">
    
    <!-- Main content container -->
    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: transparent;">
        <!-- Header section with logo and title -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: transparent;">
            <Rectangle arcWidth="20" arcHeight="20" width="60" height="60" 
                       fill="linear-gradient(to bottom right, #2193b0, #6dd5ed)" 
                       strokeType="INSIDE" stroke="WHITE" strokeWidth="2">
                <effect>
                    <DropShadow blurType="GAUSSIAN" radius="10" offsetX="0" offsetY="2" color="rgba(0,0,0,0.15)"/>
                </effect>
            </Rectangle>
            <Label text="Welcome Back" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Sign in to continue" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Login form container -->
        <VBox alignment="CENTER" spacing="20" maxWidth="380" minWidth="380"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 35; 
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 20, 0, 0, 10);">
            
            <!-- Form title -->
            <Label text="Account Login" style="-fx-text-fill: #333; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            
            <!-- Input fields container -->
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: transparent;">
                <!-- Username field -->
                <VBox spacing="5" style="-fx-background-color: transparent;">
                    <Label text="Username" style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" promptText="Enter your username" 
                               style="-fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;
                                      -fx-background-color: #f5f7fa; -fx-border-color: #e6e9f0; -fx-border-radius: 8; -fx-border-width: 1;"/>
                </VBox>
                
                <!-- Password field -->
                <VBox spacing="5" style="-fx-background-color: transparent;">
                    <Label text="Password" style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                   style="-fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;
                                          -fx-background-color: #f5f7fa; -fx-border-color: #e6e9f0; -fx-border-radius: 8; -fx-border-width: 1;"/>
                </VBox>
                
                <!-- Remember me and forgot password -->
                <HBox alignment="CENTER_LEFT" spacing="80" style="-fx-background-color: transparent;">
                    <CheckBox text="Remember me" style="-fx-text-fill: #666; -fx-font-size: 13px;"/>
                    <Button text="Forgot Password?" 
                            style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 13px; 
                                   -fx-padding: 0; -fx-underline: true; -fx-cursor: hand;"/>
                </HBox>
            </VBox>
            
            <!-- Login button -->
            <Button text="Sign In" onAction="#login" defaultButton="true"
                    style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed); 
                           -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                           -fx-background-radius: 8; -fx-padding: 12 30; -fx-effect: dropshadow(three-pass-box, rgba(33,147,176,0.3), 10, 0, 0, 5);"
                    onMouseEntered="#onHoverLogin" onMouseExited="#onExitLogin"/>
            
            <!-- Sign up section -->
            <HBox alignment="CENTER" spacing="5" style="-fx-background-color: transparent;">
                <Label text="Don't have an account?" style="-fx-text-fill: #666; -fx-font-size: 13px;"/>
                <Button text="Sign Up" 
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 13px; 
                               -fx-font-weight: bold; -fx-padding: 0; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
        
        <!-- Footer -->
        <Label text="Â© 2023 Your Company Name. All rights reserved." 
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11px;"/>
    </VBox>
</StackPane>