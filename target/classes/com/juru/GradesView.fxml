<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.GradesViewController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header Section -->
    <VBox spacing="5">
        <Label text="📖 Internal Marks" 
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <Label text="View your subject-wise internal marks for each semester."
               style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
    </VBox>

    <!-- Filter Panel -->
    <HBox spacing="15" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; 
                 -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Semester:"
               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
        <ComboBox fx:id="semesterComboBox" promptText="Select Semester"
                  style="-fx-pref-width: 200; -fx-pref-height: 35;" />
        <Button fx:id="refreshButton" text="🔄 Refresh"
                style="-fx-background-color: #007bff; -fx-text-fill: white; 
                       -fx-font-weight: bold; -fx-pref-width: 100; -fx-pref-height: 35;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="ℹ️ Select a semester to view marks"
               style="-fx-text-fill: #17a2b8; -fx-font-weight: bold;" />
    </HBox>

    <!-- Marks Table -->
    <VBox spacing="10"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;
                 -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, #dee2e6, 5, 0, 0, 0);">
        <Label text="📚 Subject-wise Marks"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <TableView fx:id="gradesTable" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="subjectColumn" text="Subject"
                             style="-fx-font-weight: bold;" prefWidth="350" />
                <TableColumn fx:id="marksColumn" text="Marks"
                             style="-fx-font-weight: bold;" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>

</VBox>
