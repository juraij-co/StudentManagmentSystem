<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.StudentDashboardHomeController"
      style="-fx-background-color: #f8f9fa; -fx-padding: 25;">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <VBox spacing="5">
            <Label fx:id="welcomeLabel"
                   text="Welcome Back, Student!"
                   style="-fx-font-size: 28px; -fx-text-fill: #343a40; -fx-font-weight: bold;" />
            <Label text="Here's an overview of your course, subjects, and attendance"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 14px;" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <VBox alignment="CENTER_RIGHT" spacing="5">
            <Label fx:id="dateLabel" text="Monday, Oct 2, 2025"
                   style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <Label fx:id="timeLabel" text="10:30 AM"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
        </VBox>
    </HBox>

    <!-- Quick Stats Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>

        <!-- Course Card -->
        <VBox GridPane.columnIndex="0" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10,0,0,3);">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Course" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            <Label fx:id="courseName" text="-" style="-fx-font-size: 20px; -fx-text-fill: #1976d2; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Semester Card -->
        <VBox GridPane.columnIndex="1" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10,0,0,3);">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Current Semester" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            <Label fx:id="currentSemester" text="-" style="-fx-font-size: 20px; -fx-text-fill: #2e7d32; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Subjects Count Card -->
        <VBox GridPane.columnIndex="2" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10,0,0,3);">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Subjects" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            <Label fx:id="subjectsCount" text="0" style="-fx-font-size: 20px; -fx-text-fill: #ef6c00; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Attendance Card -->
        <VBox GridPane.columnIndex="3" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10,0,0,3);">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Attendance" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            <Label fx:id="attendancePercent" text="0%" style="-fx-font-size: 20px; -fx-text-fill: #7b1fa2; -fx-font-weight: bold;"/>
        </VBox>
    </GridPane>

    <!-- Timetable Section -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10,0,0,3); -fx-padding: 20;">
        <Label text="ðŸ“… Weekly Timetable"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <GridPane fx:id="timetableGrid" hgap="10" vgap="10"
                  style="-fx-background-color: #fafafa; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 10;" />
    </VBox>

</VBox>
