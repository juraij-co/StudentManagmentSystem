<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header Section fx:controller="com.juru.TeacherTimetableController"-->
    <VBox spacing="10">
        <Label text="🗓️ Teacher Timetable" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <Label fx:id="dateLabel" text="Weekly schedule view" 
               style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
    </VBox>

    <!-- Selection Panel -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Filter Timetable" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="45" />
                <ColumnConstraints percentWidth="45" />
            </columnConstraints>

            <Label text="Course *" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Label text="Semester *" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />

            <ComboBox fx:id="courseComboBox" promptText="Choose Course" 
                      GridPane.columnIndex="0" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 200; -fx-pref-height: 35;" />
            <ComboBox fx:id="semesterComboBox" promptText="Select Semester" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 150; -fx-pref-height: 35;" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Load Timetable" fx:id="loadTimetableBtn"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35; -fx-pref-width: 140;" />
        </HBox>
    </VBox>

    <!-- Timetable Grid (whole week) -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="🕘 Weekly Timetable" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <GridPane fx:id="timetableGrid" hgap="10" vgap="10" style="-fx-background-color: #f1f3f5; -fx-padding: 15; -fx-background-radius: 8;">
            <!-- Example layout: 
                 Columns = Days (Mon–Sat)
                 Rows = Periods (1,2,3,4,5,6,7)
                 This will be populated dynamically via controller -->
        </GridPane>
    </VBox>

    <!-- Status Section -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="ℹ️ Please load timetable" 
               style="-fx-text-fill: #17a2b8; -fx-font-weight: bold; -fx-font-size: 13px;" />
    </HBox>
</VBox>
