<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.StudentController" spacing="10" padding="15">

    <!-- Title and Search -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Students Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search by name or email" onKeyReleased="#searchStudents"/>
        <Button text="Add Student" onAction="#openAddStudent"/>
    </HBox>

    <!-- Students Table -->
    <TableView fx:id="studentsTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
            <TableColumn fx:id="colCourse" text="Course" prefWidth="150"/>
            <TableColumn fx:id="colSemester" text="Semester" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
