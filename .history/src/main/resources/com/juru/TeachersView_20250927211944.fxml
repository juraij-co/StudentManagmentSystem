<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.TeachersController" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">
    <!-- Header Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <Button text="← Back" onAction="#goBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
        <Label text="Teacher Management" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add New Teacher" onAction="#showAddTeacherForm" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
    </HBox>

    <!-- Search and Filter Section -->
    <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <TextField fx:id="searchField" promptText="Search by name or username..." style="-fx-pref-width: 280; -fx-padding: 8;" />
        <Button text="Search" onAction="#searchTeachers" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Filter by:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <ComboBox fx:id="departmentFilter" promptText="Department" style="-fx-pref-width: 160; -fx-padding: 5;" />
        <ComboBox fx:id="courseFilter" promptText="Course" style="-fx-pref-width: 160; -fx-padding: 5;" />
        <ComboBox fx:id="semesterFilter" promptText="Semester" style="-fx-pref-width: 160; -fx-padding: 5;" />
        <Button text="Clear Filters" onAction="#clearFilters" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
    </HBox>

    <!-- Add/Edit Teacher Form (Initially hidden) -->
    <VBox fx:id="teacherForm" visible="false" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #ced4da; -fx-border-radius: 8; -fx-border-width: 1;">
        <Label text="Add/Edit Teacher" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #212529;" />
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>
            
            <Label text="Full Name:*" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <TextField fx:id="teacherName" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-padding: 8;" />
            
            <Label text="Username:*" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <TextField fx:id="teacherUsername" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-padding: 8;" />
            
            <Label text="Department:*" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <ComboBox fx:id="teacherDepartment" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-padding: 5;" />
            
            <Label text="Assigned Courses:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <VBox GridPane.rowIndex="3" GridPane.columnIndex="1" spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="availableCourses" style="-fx-pref-width: 250; -fx-padding: 5;" />
                    <Button text="Add Course" onAction="#addCourseToTeacher" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" />
                </HBox>
                <Label text="Selected Courses:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
                <VBox fx:id="assignedCoursesContainer" spacing="5" style="-fx-pref-height: 120; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-padding: 10; -fx-background-color: #f8f9fa;">
                    <!-- Courses will be added dynamically here -->
                </VBox>
            </VBox>
            
            <Label text="Assigned Semesters &amp; Subjects:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <VBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="availableSemesters" style="-fx-pref-width: 150; -fx-padding: 5;" />
                    <ComboBox fx:id="availableSubjects" promptText="Select Subject" style="-fx-pref-width: 200; -fx-padding: 5;" />
                    <Button text="Add Semester &amp; Subject" onAction="#addSemesterSubjectToTeacher" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" />
                </HBox>
                <Label text="Selected Semesters &amp; Subjects:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
                <VBox fx:id="assignedSemestersContainer" spacing="5" style="-fx-pref-height: 120; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-padding: 10; -fx-background-color: #f8f9fa;">
                    <!-- Semesters and subjects will be added dynamically here -->
                </VBox>
            </VBox>
        </GridPane>
        
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Cancel" onAction="#hideTeacherForm" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" />
            <Button text="Save Teacher" onAction="#saveTeacher" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" />
        </HBox>
    </VBox>

    <!-- Teachers Table -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Teachers List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #212529;" />
        <TableView fx:id="teachersTable" style="-fx-pref-height: 400; -fx-border-color: #dee2e6; -fx-border-radius: 4;">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="60" style="-fx-alignment: CENTER;" />
                <TableColumn text="Name" fx:id="colName" prefWidth="180" />
                <TableColumn text="Username" fx:id="colUsername" prefWidth="150" />
                <TableColumn text="Department" fx:id="colDepartment" prefWidth="140" />
                <TableColumn text="Courses" fx:id="colCourses" prefWidth="200" />
                <TableColumn text="Semesters" fx:id="colSemesters" prefWidth="150" />
                <TableColumn text="Actions" fx:id="colActions" prefWidth="200" style="-fx-alignment: CENTER;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Status Bar -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #e9ecef; -fx-padding: 10; -fx-background-radius: 4;">
        <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #495057; -fx-font-style: italic; -fx-font-size: 12px;" />
    </HBox>
</VBox>