<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.TeachersController" stylesheets="@styles.css">
    <headerText>
        <Label fx:id="dialogTitle" text="Add New Teacher" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </headerText>
    
    <content>
        <VBox spacing="15" style="-fx-padding: 10;">
            <GridPane hgap="10" vgap="10" style="-fx-padding: 5;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30" />
                    <ColumnConstraints percentWidth="70" />
                </columnConstraints>
                
                <!-- Teacher Information -->
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="teacherName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="teacherUsername" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="teacherEmail" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                
                <Label text="Department:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="teacherDepartment" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                
                <!-- Assigned Courses -->
                <Label text="Assigned Courses:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <VBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="5">
                    <HBox spacing="5">
                        <ComboBox fx:id="availableCourses" style="-fx-pref-width: 200;" />
                        <Button text="Add Course" onAction="#addCourseToTeacher" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </HBox>
                    <ListView fx:id="assignedCourses" style="-fx-pref-height: 100;" />
                </VBox>
                
                <!-- Assigned Semesters -->
                <Label text="Assigned Semesters:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <VBox GridPane.rowIndex="5" GridPane.columnIndex="1" spacing="5">
                    <HBox spacing="5">
                        <ComboBox fx:id="availableSemesters" style="-fx-pref-width: 200;" />
                        <Button text="Add Semester" onAction="#addSemesterToTeacher" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </HBox>
                    <ListView fx:id="assignedSemesters" style="-fx-pref-height: 80;" />
                </VBox>
            </GridPane>
        </VBox>
    </content>
</DialogPane>