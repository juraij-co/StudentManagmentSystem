<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.juru.TeacherAttendanceController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header Section -->
    <VBox spacing="10">
        <Label text="ðŸ“Š Student Attendance Management" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <Label fx:id="dateLabel" text="Today's Date: --/--/----" 
               style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
    </VBox>

    <!-- Selection Panel -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Select Session Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
        
        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="30" />
            </columnConstraints>
            
            <Label text="Subject *" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Label text="Period *" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Label text="Date *" GridPane.columnIndex="2" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            
            <ComboBox fx:id="subjectComboBox" promptText="Choose Subject" 
                     GridPane.columnIndex="0" GridPane.rowIndex="1" 
                     style="-fx-pref-width: 200; -fx-pref-height: 35;" />
            <ComboBox fx:id="periodComboBox" promptText="Select Period" 
                     GridPane.columnIndex="1" GridPane.rowIndex="1" 
                     style="-fx-pref-width: 150; -fx-pref-height: 35;" />
            <DatePicker fx:id="datePicker" GridPane.columnIndex="2" GridPane.rowIndex="1" 
                       style="-fx-pref-width: 150; -fx-pref-height: 35;" />
        </GridPane>
        
    </VBox>


    <!-- Student Table Section -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <HBox alignment="CENTER_LEFT">
            <Label text="ðŸ‘¥ Student Attendance List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Mark All Present" onAction="#markAllPresent"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 10;" />
                <Button text="Mark All Absent" onAction="#markAllAbsent"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 10;" />
               
            </HBox>
        </HBox>

        <!-- Scrollable Table Container -->
        <VBox style="-fx-max-height: 400; -fx-pref-height: 400;">
            <TableView fx:id="attendanceTable" style="-fx-pref-height: 400;">
                <columns>
                    <TableColumn text="Student ID" fx:id="colStudentId" prefWidth="120" style="-fx-alignment: CENTER;" />
                    <TableColumn text="Student Name" fx:id="colName" prefWidth="250" />
                    <TableColumn text="Attendance Status" fx:id="colStatus" prefWidth="150" style="-fx-alignment: CENTER;" />
                    <TableColumn text="Action" prefWidth="120" style="-fx-alignment: CENTER;" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

       
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="âœ… Ready to mark attendance" 
               style="-fx-text-fill: #28a745; -fx-font-weight: bold; -fx-font-size: 13px;" />
        
        <Button text="Save Attendance" onAction="#saveAttendance"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-pref-height: 35; -fx-pref-width: 140;" />
    </HBox>
</VBox>