<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.juru.StudentController" 
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">
    
    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Student Management" style="-fx-font-size: 24px; -fx-text-fill: #333; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Total Students: 142" style="-fx-text-fill: #666; -fx-font-size: 14px;" />
    </HBox>

    <!-- Action Toolbar -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <Button text="Add New Student" onAction="#openAddStudent" 
                style="-fx-background-color: #2193b0; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15; -fx-font-weight: bold;">
            <graphic>
                <Rectangle width="16" height="16" arcWidth="4" arcHeight="4" fill="white" />
            </graphic>
        </Button>
        
        <Region HBox.hgrow="ALWAYS" />
        
        <TextField fx:id="searchField" promptText="Search students by name..." 
                   style="-fx-background-radius: 4; -fx-padding: 8; -fx-pref-width: 250;" />
        
        <Button text="Search" onAction="#searchStudents" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15;" />
        
        <Button text="Export" 
                style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15;">
            <graphic>
                <Rectangle width="16" height="16" arcWidth="4" arcHeight="4" fill="white" />
            </graphic>
        </Button>
    </HBox>

    <!-- Filter Options -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f0f2f5; -fx-background-radius: 6; -fx-padding: 10;">
        <Label text="Filter by:" style="-fx-text-fill: #555; -fx-font-weight: bold;" />
        <ComboBox promptText="Course" style="-fx-background-radius: 4; -fx-pref-width: 120;" />
        <ComboBox promptText="Semester" style="-fx-background-radius: 4; -fx-pref-width: 100;" />
        <ComboBox promptText="Status" style="-fx-background-radius: 4; -fx-pref-width: 100;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Clear Filters" style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-padding: 5 10;" />
    </HBox>

    <!-- Students Table -->
    <TableView fx:id="studentsTable" prefHeight="400" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60">
                <style>
                    -fx-alignment: CENTER;
                    -fx-font-weight: bold;
                </style>
            </TableColumn>
            <TableColumn text="NAME" fx:id="colName" prefWidth="180">
                <style>
                    -fx-font-weight: bold;
                </style>
            </TableColumn>
            <TableColumn text="EMAIL" fx:id="colEmail" prefWidth="200" />
            <TableColumn text="COURSE" fx:id="colCourse" prefWidth="120">
                <style>
                    -fx-alignment: CENTER;
                </style>
            </TableColumn>
            <TableColumn text="SEMESTER" fx:id="colSemester" prefWidth="80">
                <style>
                    -fx-alignment: CENTER;
                </style>
            </TableColumn>
            <TableColumn text="STATUS" prefWidth="100">
                <style>
                    -fx-alignment: CENTER;
                </style>
            </TableColumn>
            <TableColumn text="ACTIONS" fx:id="colActions" prefWidth="150">
                <style>
                    -fx-alignment: CENTER;
                </style>
            </TableColumn>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Pagination Controls -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Label text="Rows per page:" style="-fx-text-fill: #666;" />
        <ComboBox value="10" style="-fx-pref-width: 60;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String value="10" />
                    <String value="25" />
                    <String value="50" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="1-10 of 142" style="-fx-text-fill: #666;" />
        <Button text="◀" style="-fx-background-color: #f0f0f0; -fx-background-radius: 4; -fx-min-width: 30;" />
        <Button text="▶" style="-fx-background-color: #f0f0f0; -fx-background-radius: 4; -fx-min-width: 30;" />
    </HBox>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
        <Label text="Last updated: Today, 10:30 AM" style="-fx-text-fill: #888; -fx-font-size: 12px;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="System Status: Online" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" />
    </HBox>
</VBox>