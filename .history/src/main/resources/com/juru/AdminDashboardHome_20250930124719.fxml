<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.AdminDashboardController"
      style="-fx-background-color: #f5f7fa;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Welcome Section -->
    <HBox alignment="CENTER_LEFT">
        <VBox>
            <Label fx:id="welcomeLabel" text="Welcome Admin!" style="-fx-font-size: 24px; -fx-text-fill: #333; -fx-font-weight: bold;" />
            <Label fx:id="dateLabel" text="Today's date" style="-fx-text-fill: #666; -fx-font-size: 14px;" />
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#logout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Stats Overview Cards -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="20"/>
        </columnConstraints>

        <!-- Students Card -->
        <VBox GridPane.columnIndex="0" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="40" height="40" arcWidth="20" arcHeight="20" fill="rgba(33,147,176,0.2)"/>
                <Label fx:id="studentsCount" text="0" style="-fx-font-size: 24px; -fx-text-fill: #2193b0; -fx-font-weight: bold;"/>
            </HBox>
            <Label text="Total Students" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Teachers Card -->
        <VBox GridPane.columnIndex="1" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="40" height="40" arcWidth="20" arcHeight="20" fill="rgba(76,175,80,0.2)"/>
                <Label fx:id="teachersCount" text="0" style="-fx-font-size: 24px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
            </HBox>
            <Label text="Total Teachers" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Classes Card -->
        <VBox GridPane.columnIndex="2" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="40" height="40" arcWidth="20" arcHeight="20" fill="rgba(255,152,0,0.2)"/>
                <Label fx:id="classesCount" text="0" style="-fx-font-size: 24px; -fx-text-fill: #FF9800; -fx-font-weight: bold;"/>
            </HBox>
            <Label text="Active Classes" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Attendance Card -->
        <VBox GridPane.columnIndex="3" spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Rectangle width="40" height="40" arcWidth="20" arcHeight="20" fill="rgba(156,39,176,0.2)"/>
                <Label fx:id="attendancePercent" text="0%" style="-fx-font-size: 24px; -fx-text-fill: #9C27B0; -fx-font-weight: bold;"/>
            </HBox>
            <Label text="Today's Attendance" style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Quick Actions Card -->
        <VBox GridPane.columnIndex="4" spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
            <Label text="Quick Actions" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Add Student" onAction="#openStudents" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Add Teacher" onAction="#openTeachers" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Manage Classes" onAction="#openClasses" style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Attendance" onAction="#openAttendance" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </GridPane>

    <!-- Recent Activities Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
        <Label text="Recent Activities" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <ListView fx:id="activityList" prefHeight="200"/>
    </VBox>

</VBox>
