<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.StudentDashboardHomeController"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <VBox spacing="5">
            <Label fx:id="welcomeLabel"
                   text="Welcome Back, Student!"
                   style="-fx-font-size: 28px; -fx-text-fill: #343a40; -fx-font-weight: bold;" />
            <Label text="Here's an overview of your classes, attendance, and marks"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 14px;" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <VBox alignment="CENTER_RIGHT" spacing="5">
            <Label fx:id="dateLabel" text="Monday, Oct 2, 2025"
                   style="-fx-text-fill: #495057; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <Label fx:id="timeLabel" text="10:30 AM"
                   style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
        </VBox>
    </HBox>

    <!-- Quick Stats Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>

        <!-- Classes Card -->
        <VBox GridPane.columnIndex="0" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3); -fx-cursor: hand;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #e3f2fd; -fx-background-radius: 10;">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="ðŸ“š" style="-fx-font-size: 18px;" />
                </StackPane>
                <VBox spacing="2">
                    <Label fx:id="classesCount" text="0" style="-fx-font-size: 24px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" />
                    <Label text="Your Classes" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Attendance Card -->
        <VBox GridPane.columnIndex="1" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3); -fx-cursor: hand;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #f3e5f5; -fx-background-radius: 10;">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="ðŸ“Š" style="-fx-font-size: 18px;" />
                </StackPane>
                <VBox spacing="2">
                    <Label fx:id="attendancePercent" text="0%" style="-fx-font-size: 24px; -fx-text-fill: #7b1fa2; -fx-font-weight: bold;" />
                    <Label text="Attendance" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Marks Card -->
        <VBox GridPane.columnIndex="2" spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3); -fx-cursor: hand;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <StackPane style="-fx-background-color: #fff3e0; -fx-background-radius: 10;">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="ðŸ“" style="-fx-font-size: 18px;" />
                </StackPane>
                <VBox spacing="2">
                    <Label fx:id="marksCount" text="0" style="-fx-font-size: 24px; -fx-text-fill: #ef6c00; -fx-font-weight: bold;" />
                    <Label text="Pending Marks" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                </VBox>
            </HBox>
        </VBox>
    </GridPane>
</VBox>
