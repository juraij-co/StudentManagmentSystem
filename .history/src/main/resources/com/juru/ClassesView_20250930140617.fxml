<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml" 
 fx:controller="com.juru.ClassesViewController"
style="-fx-padding: 20; -fx-background-color: #f5f7fa;">
    <Label text="Admin - Academic Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;" />

    <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

       <!-- Department Tab -->
<Tab text="Departments">
    <VBox spacing="15" style="-fx-padding: 20;">
        <Label text="Manage Departments" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
            <TextField fx:id="departmentNameField" promptText="Enter Department Name" style="-fx-pref-width: 250;" />
            <Button text="Add Department" fx:id="addDepartmentBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
        </HBox>
        
        <TableView fx:id="departmentTable" prefHeight="400" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <columns>
                <TableColumn text="Department ID" fx:id="deptIdColumn" />
                <TableColumn text="Department Name" fx:id="deptNameColumn" />
            </columns>
            
        </TableView>
        
        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="deptStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
        </HBox>
    </VBox>
</Tab>



        <!-- Courses Tab -->
        <Tab text="Courses">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Manage Courses" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                    <TextField fx:id="courseNameField" promptText="Enter Course Name" style="-fx-pref-width: 200;" />
                    <ComboBox fx:id="departmentCombo" promptText="Select Department" style="-fx-pref-width: 200;" />
                    <Button text="Add Course" fx:id="addCourseBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
                </HBox>
                
                <TableView fx:id="courseTable" prefHeight="400" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <columns>
                        <TableColumn text="Course ID" fx:id="courseIdColumn" />
                        <TableColumn text="Course Name" fx:id="courseNameColumn" />
                        <TableColumn text="Department" fx:id="courseDeptColumn" />
                    </columns>
                    
                </TableView>
                
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="courseStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Semester Tab -->
<Tab text="Semesters">
    <VBox spacing="15" style="-fx-padding: 20;">
        <Label text="Manage Semesters" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <TextField fx:id="semesterCountField" promptText="Enter total number of semesters" style="-fx-pref-width: 200;" />
    <ComboBox fx:id="semesterCourseCombo" promptText="Select Course" style="-fx-pref-width: 200" />
            <Button text="Add Semester" fx:id="addSemesterBtn" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
        </HBox>
        
        <TableView fx:id="semesterTable" prefHeight="400" 
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <columns>
                <TableColumn text="Semester ID" fx:id="semIdColumn" />
                <TableColumn text="Semester Name" fx:id="semNameColumn" />
                <TableColumn text="Course" fx:id="semCourseColumn" />
            </columns>
            
        </TableView>
        
        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="semStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
        </HBox>
    </VBox>
</Tab>


        

        <!-- Subjects Tab -->
        <Tab text="Subjects">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Manage Subjects" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                    <TextField fx:id="subjectNameField" promptText="Enter Subject Name" style="-fx-pref-width: 180;" />
                    <ComboBox fx:id="courseCombo" promptText="Select Course" style="-fx-pref-width: 150;" />
                    <ComboBox fx:id="semesterCombo" promptText="Select Semester" style="-fx-pref-width: 150;" />
                    <Button text="Add Subject" fx:id="addSubjectBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
                </HBox>
                
                <TableView fx:id="subjectTable" prefHeight="400" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <columns>
                        <TableColumn text="Subject ID" fx:id="subjectIdColumn" />
                        <TableColumn text="Subject Name" fx:id="subjectNameColumn" />
                        <TableColumn text="Course" fx:id="subjectCourseColumn" />
                        <TableColumn text="Semester" fx:id="subjectSemesterColumn" />
                    </columns>
                    
                </TableView>
                
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="subjectStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Timetable Tab -->
    <Tab text="Timetable">
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Manage Timetable" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            
            <!-- Selection Panel -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <ComboBox fx:id="ttDepartmentCombo" promptText="Select Department" style="-fx-pref-width: 180;" />
                <ComboBox fx:id="ttCourseCombo" promptText="Select Course" style="-fx-pref-width: 180;" />
                <ComboBox fx:id="ttSemesterCombo" promptText="Select Semester" style="-fx-pref-width: 180;" />
                <Button text="Load Subjects" fx:id="loadSubjectsBtn"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
            </HBox>
            
            <HBox spacing="20">
                <!-- Subject Panel -->
                <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5; -fx-pref-width: 200;">
                    <Label text="Subjects" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <ListView fx:id="subjectsListView" style="-fx-pref-height: 400;" />
                </VBox>
                
                <!-- Timetable Grid -->
                <GridPane fx:id="timetableGrid" hgap="5" vgap="5" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <!-- Day and Period headers can be added dynamically in controller -->
                </GridPane>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Save Timetable" fx:id="saveTimetableBtn"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                <Label fx:id="ttStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
            </HBox>
        </VBox>
    </Tab>


    </TabPane>

    
    
    <!-- Global Status Bar -->
    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Label fx:id="globalStatusLabel" text="System Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>
</VBox>