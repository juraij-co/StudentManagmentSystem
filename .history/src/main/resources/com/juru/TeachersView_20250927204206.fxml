<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.TeachersController" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
    <!-- Header Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="← Back" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
        <Label text="Teacher Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add New Teacher" onAction="#showAddTeacherForm" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>

    <!-- Search and Filter Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search teachers..." style="-fx-pref-width: 250;" />
        <Button text="Search" onAction="#searchTeachers" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Filter by:" style="-fx-font-weight: bold;" />
        <ComboBox fx:id="departmentFilter" promptText="Department" style="-fx-pref-width: 150;" />
        <ComboBox fx:id="courseFilter" promptText="Course" style="-fx-pref-width: 150;" />
        <ComboBox fx:id="semesterFilter" promptText="Semester" style="-fx-pref-width: 150;" />
        <Button text="Clear Filters" onAction="#clearFilters" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>

    <!-- Add/Edit Teacher Form (Initially hidden) -->
    <VBox fx:id="teacherForm" visible="false" spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <Label fx:id="formTitle" text="Add New Teacher" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="75" />
            </columnConstraints>
            
            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <TextField fx:id="teacherName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <TextField fx:id="teacherEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            
            <Label text="Department:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="teacherDepartment" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            
            <Label text="Assigned Courses:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <VBox GridPane.rowIndex="3" GridPane.columnIndex="1" spacing="5">
                <HBox spacing="5">
                    <ComboBox fx:id="availableCourses" style="-fx-pref-width: 200;" />
                    <Button text="Add Course" onAction="#addCourseToTeacher" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                </HBox>
                <ListView fx:id="assignedCourses" style="-fx-pref-height: 100;" />
            </VBox>
            
            <Label text="Assigned Semesters:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <VBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="5">
                <HBox spacing="5">
                    <ComboBox fx:id="availableSemesters" style="-fx-pref-width: 200;" />
                    <Button text="Add Semester" onAction="#addSemesterToTeacher" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                </HBox>
                <ListView fx:id="assignedSemesters" style="-fx-pref-height: 80;" />
            </VBox>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#hideTeacherForm" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Save Teacher" onAction="#saveTeacher" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </VBox>

    <!-- Teachers Table -->
    <TableView fx:id="teachersTable" style="-fx-pref-height: 400;">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60" />
            <TableColumn text="Name" fx:id="colName" prefWidth="150" />
            <TableColumn text="Email" fx:id="colEmail" prefWidth="200" />
            <TableColumn text="Department" fx:id="colDepartment" prefWidth="120" />
            <TableColumn text="Courses" fx:id="colCourses" prefWidth="200" />
            <TableColumn text="Semesters" fx:id="colSemesters" prefWidth="120" />
            <TableColumn text="Actions" fx:id="colActions" prefWidth="150" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Status Bar -->
    <HBox alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>
</VBox>
