<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.TeachersController" spacing="25" alignment="TOP_CENTER" style="-fx-padding: 25;">
    <!-- Header Section -->
    <VBox spacing="15">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="← Back to Dashboard" onAction="#goBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="＋ Add New Teacher" onAction="#showAddTeacherForm" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20;" />
        </HBox>
        
        <Label text="Teacher Management" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Separator style="-fx-border-color: #bdc3c7;" />
    </VBox>

    <!-- Search and Filter Section -->
    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Find Teachers" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by name or username..." style="-fx-pref-width: 300; -fx-pref-height: 35;" />
            <Button text="🔍 Search" onAction="#searchTeachers" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
        </HBox>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Filter Options" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="departmentFilter" promptText="All Departments" style="-fx-pref-width: 180; -fx-pref-height: 35;" />
                    <ComboBox fx:id="courseFilter" promptText="All Courses" style="-fx-pref-width: 180; -fx-pref-height: 35;" />
                    <ComboBox fx:id="semesterFilter" promptText="All Semesters" style="-fx-pref-width: 180; -fx-pref-height: 35;" />
                    <Button text="🔄 Clear Filters" onAction="#clearFilters" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- Add/Edit Teacher Form (Initially hidden) -->
    <VBox fx:id="teacherForm" visible="false" spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
        <Label text="Add New Teacher" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>
            
            <!-- Basic Information -->
            <Label text="Basic Information" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e; -fx-padding: 0 0 10 0;" />
            
            <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <TextField fx:id="teacherName" promptText="Enter full name" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-height: 35;" />
            
            <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <TextField fx:id="teacherUsername" promptText="Enter username" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-height: 35;" />
            
            <Label text="Department:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="teacherDepartment" promptText="Select department" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-height: 35;" />
            
            <!-- Course Management -->
            <Label text="Course Assignment" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e; -fx-padding: 20 0 10 0;" />
            
            <Label text="Available Courses:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <VBox GridPane.rowIndex="5" GridPane.columnIndex="1" spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="availableCourses" promptText="Select course to add" style="-fx-pref-width: 250; -fx-pref-height: 35;" />
                    <Button text="＋ Add Course" onAction="#addCourseToTeacher" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" />
                </HBox>
                <Label text="Assigned Courses:" style="-fx-font-weight: bold; -fx-padding: 10 0 5 0;" />
                <VBox fx:id="assignedCoursesContainer" spacing="5" style="-fx-pref-height: 120; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white;">
                    <!-- Dynamic content will be added here -->
                </VBox>
            </VBox>
            
            <!-- Semester Management -->
            <Label text="Semester Assignment" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e; -fx-padding: 20 0 10 0;" />
            
            <Label text="Available Semesters:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
            <VBox GridPane.rowIndex="7" GridPane.columnIndex="1" spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="availableSemesters" promptText="Select semester to add" style="-fx-pref-width: 250; -fx-pref-height: 35;" />
                    <Button text="＋ Add Semester" onAction="#addSemesterToTeacher" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" />
                </HBox>
                <Label text="Assigned Semesters:" style="-fx-font-weight: bold; -fx-padding: 10 0 5 0;" />
                <VBox fx:id="assignedSemestersContainer" spacing="5" style="-fx-pref-height: 100; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white;">
                    <!-- Dynamic content will be added here -->
                </VBox>
            </VBox>
        </GridPane>
        
        <!-- Form Actions -->
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
            <Button text="✕ Cancel" onAction="#hideTeacherForm" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" />
            <Button text="💾 Save Teacher" onAction="#saveTeacher" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25;" />
        </HBox>
    </VBox>

    <!-- Teachers Table -->
    <VBox spacing="10">
        <Label text="Teacher List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <TableView fx:id="teachersTable" style="-fx-pref-height: 400; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="80" />
                <TableColumn text="Name" fx:id="colName" prefWidth="200" />
                <TableColumn text="Username" fx:id="colUsername" prefWidth="150" />
                <TableColumn text="Department" fx:id="colDepartment" prefWidth="150" />
                <TableColumn text="Courses" fx:id="colCourses" prefWidth="250" />
                <TableColumn text="Semesters" fx:id="colSemesters" prefWidth="150" />
                <TableColumn text="Actions" fx:id="colActions" prefWidth="200" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Status Bar -->
    <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
        <Label fx:id="statusLabel" text="Ready to manage teachers" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>
</VBox>