<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.StudentAttendanceController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f0f2f5;">

    <!-- Header -->
    <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, #4361ee, #3a0ca3); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
        <Label text="[Chart]Attendance Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox spacing="8">
                <Label fx:id="studentNameLabel" text="Welcome, Student" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label fx:id="studentIdLabel" text="ID: 12345" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
                <HBox spacing="15">
                    <Label fx:id="totalClassesLabel" text="Total Classes: 0" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
                    <Label fx:id="attendedClassesLabel" text="Attended: 0" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
                </HBox>
                <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #4cc9f0; -fx-font-weight: bold;" />
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
            <VBox spacing="8" alignment="CENTER_RIGHT">
                <Label text="Overall Attendance" style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;" />
                <Label fx:id="overallAttendanceLabel" text="92%" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4cc9f0;" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Semester & Month Selection -->
    <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
        <ComboBox fx:id="semesterComboBox" promptText="Select Semester" style="-fx-pref-width: 160; -fx-background-radius: 6;" />
        <ComboBox fx:id="monthComboBox" promptText="Select Month" style="-fx-pref-width: 140; -fx-background-radius: 6;" />
        <Button fx:id="applyFilterBtn" text="Load Attendance" style="-fx-background-color: #4361ee; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"/>
    </HBox>

    <!-- Tabs -->
    <TabPane fx:id="attendanceTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: transparent; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
        <!-- Monthly Attendance Tab -->
        <Tab text="ðŸ“… Monthly Attendance">
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Label fx:id="monthYearLabel" text="October 2025" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />

                <!-- Weekly Header -->
                <HBox spacing="1" style="-fx-background-color: #4361ee; -fx-padding: 10; -fx-background-radius: 6 6 0 0;">
                    <Label text="Date" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 1" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 2" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 3" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 4" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 5" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 6" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                    <Label text="Period 7" style="-fx-pref-width: 80; -fx-text-fill: white; -fx-alignment: CENTER; -fx-font-weight: bold;" />
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-max-height: 500; -fx-border-color: #e9ecef; -fx-border-radius: 0 0 6 6;">
                    <GridPane fx:id="monthlyGrid" hgap="1" vgap="1" style="-fx-background-color: #f8f9fa;"/>
                </ScrollPane>

                <!-- Legend -->
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0; -fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 6;">
                    <Label text="Legend:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Rectangle width="18" height="18" fill="#4caf50" stroke="#388e3c" arcWidth="4" arcHeight="4"/>
                        <Label text="Present" style="-fx-text-fill: #495057; -fx-font-size: 13px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Rectangle width="18" height="18" fill="#f44336" stroke="#d32f2f" arcWidth="4" arcHeight="4"/>
                        <Label text="Absent" style="-fx-text-fill: #495057; -fx-font-size: 13px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Rectangle width="18" height="18" fill="#ffffff" stroke="#bdbdbd" arcWidth="4" arcHeight="4"/>
                        <Label text="No Class" style="-fx-text-fill: #495057; -fx-font-size: 13px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Rectangle width="18" height="18" fill="#bbdefb" stroke="#64b5f6" arcWidth="4" arcHeight="4"/>
                        <Label text="Weekend/Holiday" style="-fx-text-fill: #495057; -fx-font-size: 13px;"/>
                    </HBox>
                </HBox>
            </VBox>
        </Tab>

        <!-- Subject-wise Tab -->
        <Tab text="ðŸ“š Subject-wise Report">
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <TableView fx:id="attendanceTable" prefHeight="400" style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-radius: 6;">
                    <columns>
                        <TableColumn text="Subject Code" fx:id="colSubjectCode" prefWidth="120" style="-fx-alignment: CENTER;"/>
                        <TableColumn text="Subject Name" fx:id="colSubjectName" prefWidth="220"/>
                        <TableColumn text="Total Classes" fx:id="colTotal" prefWidth="100" style="-fx-alignment: CENTER;"/>
                        <TableColumn text="Attended" fx:id="colAttended" prefWidth="100" style="-fx-alignment: CENTER;"/>
                        <TableColumn text="Percentage" fx:id="colPercentage" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>