<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.GradesViewController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header -->
    <Label text="ðŸ“˜ My Internal Marks"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Semester selection -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Semester:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <ComboBox fx:id="semesterComboBox" promptText="Choose Semester" style="-fx-pref-width: 200;" />
        <Button fx:id="refreshButton" text="Refresh"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>

    <!-- Table for Grades -->
    <TableView fx:id="gradesTable" style="-fx-pref-height: 400;">
        <columns>
            <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="250"/>
            <TableColumn fx:id="marksColumn" text="Marks" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: gray; -fx-font-style: italic;" />
</VBox>
