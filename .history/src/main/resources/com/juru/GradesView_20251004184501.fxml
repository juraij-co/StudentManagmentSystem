<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.GradesViewController"
      style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="ðŸ“Š My Academic Grades" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label fx:id="studentNameLabel" text="Welcome, Student" 
                       style="-fx-font-size: 16px; -fx-text-fill: #495057; -fx-font-weight: bold;" />
                <Label fx:id="studentIdLabel" text="ID: --" 
                       style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox spacing="5" alignment="CENTER_RIGHT">
                <Label text="Current GPA" style="-fx-text-fill: #6c757d; -fx-font-size: 14px;" />
                <Label fx:id="gpaLabel" text="0.00" 
                       style="-fx-font-size: 24px; -fx-text-fill: #28a745; -fx-font-weight: bold;" />
            </VBox>
        </HBox>
    </VBox>

  

    <!-- Semester Selection -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Select Semester:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <ComboBox fx:id="semesterComboBox" style="-fx-pref-width: 200; -fx-pref-height: 35;" />
        <Region HBox.hgrow="ALWAYS" />
    
        <Button text="ðŸ”„ Refresh" fx:id="refreshBtn"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;" />
    </HBox>

    <!-- Grades Table Section -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <HBox alignment="CENTER_LEFT">
            <Label text="ðŸ“‹ Grade Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="selectedSemesterLabel" text="All Semesters" style="-fx-text-fill: #6c757d; -fx-font-size: 14px;" />
        </HBox>

        <TableView fx:id="gradesTable" style="-fx-pref-height: 400;">
            <columns>
                <TableColumn text="Subject" fx:id="subjectColumn" prefWidth="200" />
                <TableColumn text="Assessment Type" fx:id="assignmentColumn" prefWidth="180" />
                <TableColumn text="Marks Obtained" fx:id="marksColumn" prefWidth="120" style="-fx-alignment: CENTER;" />
                <TableColumn text="Max Marks" fx:id="maxMarksColumn" prefWidth="100" style="-fx-alignment: CENTER;" />
                <TableColumn text="Percentage" fx:id="percentageColumn" prefWidth="100" style="-fx-alignment: CENTER;" />
                <TableColumn text="Grade" fx:id="gradeColumn" prefWidth="80" style="-fx-alignment: CENTER;" />
                <TableColumn text="Status" fx:id="statusColumn" prefWidth="100" style="-fx-alignment: CENTER;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Grade Legend -->
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
            <Label text="Grade Legend:" style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Rectangle width="15" height="15" fill="#4caf50" stroke="#388e3c" />
                <Label text="A (90-100%)" style="-fx-text-fill: #495057; -fx-font-size: 12px;" />
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Rectangle width="15" height="15" fill="#8bc34a" stroke="#689f38" />
                <Label text="B (80-89%)" style="-fx-text-fill: #495057; -fx-font-size: 12px;" />
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Rectangle width="15" height="15" fill="#ffc107" stroke="#ffa000" />
                <Label text="C (70-79%)" style="-fx-text-fill: #495057; -fx-font-size: 12px;" />
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Rectangle width="15" height="15" fill="#ff9800" stroke="#f57c00" />
                <Label text="D (60-69%)" style="-fx-text-fill: #495057; -fx-font-size: 12px;" />
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Rectangle width="15" height="15" fill="#f44336" stroke="#d32f2f" />
                <Label text="F (Below 60%)" style="-fx-text-fill: #495057; -fx-font-size: 12px;" />
            </HBox>
        </HBox>
    </VBox>

    <!-- Performance Summary -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-pref-width: 1; -fx-vgrow: ALWAYS;">
            <Label text="ðŸ“ˆ Performance Trends" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5" alignment="CENTER">
                    <Label fx:id="highestGradeLabel" text="A+" style="-fx-font-size: 18px; -fx-text-fill: #4caf50; -fx-font-weight: bold;" />
                    <Label text="Highest Grade" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
                </VBox>
                <VBox spacing="5" alignment="CENTER">
                    <Label fx:id="lowestGradeLabel" text="B-" style="-fx-font-size: 18px; -fx-text-fill: #ff9800; -fx-font-weight: bold;" />
                    <Label text="Lowest Grade" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
                </VBox>
                <VBox spacing="5" alignment="CENTER">
                    <Label fx:id="improvementLabel" text="+5.2%" style="-fx-font-size: 18px; -fx-text-fill: #2196f3; -fx-font-weight: bold;" />
                    <Label text="Since Last Sem" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
                </VBox>
            </HBox>
        </VBox>

        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-pref-width: 1; -fx-vgrow: ALWAYS;">
            <Label text="ðŸŽ¯ Next Goals" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />
            <VBox spacing="8">
                <Label text="â€¢ Maintain current GPA of 3.8+" style="-fx-text-fill: #6c757d; -fx-font-size: 13px;" />
                <Label text="â€¢ Improve Mathematics grade to A" style="-fx-text-fill: #6c757d; -fx-font-size: 13px;" />
                <Label text="â€¢ Complete all assignments on time" style="-fx-text-fill: #6c757d; -fx-font-size: 13px;" />
            </VBox>
        </VBox>
    </HBox>

    <!-- Status Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="âœ… Grades loaded successfully" 
               style="-fx-text-fill: #28a745; -fx-font-weight: bold; -fx-font-size: 13px;" />
        <Label fx:id="lastUpdatedLabel" text="Last updated: --" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
    </HBox>
</VBox>