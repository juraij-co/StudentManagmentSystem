<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.juru.TeacherAttendanceController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- Title -->
    <Label text="Attendance Management" 
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Date -->
    <Label fx:id="dateLabel" style="-fx-font-size: 16px; -fx-text-fill: #444;" />

    <!-- Selection Area -->
    <HBox spacing="10">
        <Label text="Semester:" />
        <ComboBox fx:id="semesterComboBox" prefWidth="150"/>
        
        <Label text="Subject:" />
        <ComboBox fx:id="subjectComboBox" prefWidth="200"/>
        
        <Label text="Period:" />
        <ComboBox fx:id="periodComboBox" prefWidth="120"/>

        <Button text="Load Students" onAction="#loadStudents" 
                style="-fx-background-color: #2193b0; -fx-text-fill: white;" />
    </HBox>

    <!-- Student Table -->
    <TableView fx:id="attendanceTable" prefHeight="400">
        <columns>
            <TableColumn text="Student ID" fx:id="colStudentId" prefWidth="120"/>
            <TableColumn text="Name" fx:id="colName" prefWidth="200"/>
            <TableColumn text="Present?" fx:id="colStatus" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save Attendance" onAction="#saveAttendance"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="View / Edit Past" onAction="#viewAttendanceRecords"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
    </HBox>

    <!-- Status -->
    <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #333;" />

</VBox>
