<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.CheckBoxTableCell?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.juru.TeacherAttendanceController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- Title -->
    <Label text="Attendance Management" 
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Class Selection -->
    <HBox spacing="10">
        <Label text="Select Class:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
        <ComboBox fx:id="classComboBox" promptText="Choose Class" prefWidth="200"/>
        <Button text="Load Students" onAction="#loadStudents"
                style="-fx-background-color: #2193b0; -fx-text-fill: white; -fx-background-radius: 4;" />
    </HBox>

    <!-- Student Table -->
    <TableView fx:id="attendanceTable" prefHeight="400">
        <columns>
            <TableColumn text="Student ID" fx:id="colStudentId" prefWidth="100"/>
            <TableColumn text="Name" fx:id="colName" prefWidth="200"/>
            <TableColumn text="Status" fx:id="colStatus" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
                <cellFactory>
                    <CheckBoxTableCell fx:factory="forTableColumn"/>
                </cellFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save Attendance" onAction="#saveAttendance"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15;" />
        <Button text="View Records" onAction="#viewAttendanceRecords"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 15;" />
    </HBox>

</VBox>
