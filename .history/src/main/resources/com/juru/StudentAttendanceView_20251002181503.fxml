<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.StudentAttendanceController"
      spacing="25" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- Header Section -->
    <VBox spacing="10">
        <Label text="ðŸ“Š My Attendance"
               style="-fx-font-size: 26px; -fx-font-w       eight: bold; -fx-text-fill: #343a40;" />
        <Label fx:id="studentNameLabel" text="Welcome, Student"
               style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" />
    </VBox>

    <!-- Section 1: Monthly Attendance Overview -->
    <VBox spacing="15">
        <Label text="ðŸ“… Monthly Attendance Overview"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <GridPane fx:id="monthlyAttendanceGrid" hgap="15" vgap="15"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
            <!-- You can dynamically populate this grid with months and percentage -->
        </GridPane>
    </VBox>

    <!-- Section 2: Subject-wise Attendance -->
    <VBox spacing="15">
        <Label text="ðŸ“š Subject-wise Attendance"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <TableView fx:id="attendanceTable" prefHeight="400" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn text="Subject Code" fx:id="colSubjectCode" prefWidth="120"/>
                <TableColumn text="Subject Name" fx:id="colSubjectName" prefWidth="220"/>
                <TableColumn text="Total Classes" fx:id="colTotal" prefWidth="120"/>
                <TableColumn text="Attended" fx:id="colAttended" prefWidth="120"/>
                <TableColumn text="Percentage" fx:id="colPercentage" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Status Bar -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="âœ… Data loaded"
               style="-fx-text-fill: #28a745; -fx-font-weight: bold; -fx-font-size: 13px;" />
    </HBox>
</VBox>
