<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.TimetableController"
      style="-fx-padding: 20; -fx-background-color: #f5f7fa;">
    
    <Label text="Manage Timetable" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Selection Panel -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
        <ComboBox fx:id="ttDepartmentCombo" promptText="Select Department" style="-fx-pref-width: 180;" />
        <ComboBox fx:id="ttCourseCombo" promptText="Select Course" style="-fx-pref-width: 180;" />
        <ComboBox fx:id="ttSemesterCombo" promptText="Select Semester" style="-fx-pref-width: 180;" />
        <Button text="Load Subjects" fx:id="loadSubjectsBtn"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>

    <HBox spacing="20">
        <!-- Subject Panel -->
        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5; -fx-pref-width: 200;">
            <Label text="Subjects" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <ListView fx:id="subjectsListView" style="-fx-pref-height: 400;" />
        </VBox>

        <!-- Timetable Grid -->
        <GridPane fx:id="timetableGrid" hgap="5" vgap="5"
                  style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Save Timetable" fx:id="saveTimetableBtn"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
        <Label fx:id="ttStatusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>
</VBox>
