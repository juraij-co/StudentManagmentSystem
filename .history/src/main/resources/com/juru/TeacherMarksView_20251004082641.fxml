<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.TeacherMarksController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">


    <!-- Header Section -->
    <VBox spacing="10">
        <Label text="ðŸ“ Student Internal Marks Management" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <Label fx:id="dateLabel" text="Today's Date: --/--/----" 
               style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
    </VBox>

    <!-- Selection Panel -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="Select Session Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="30" />
            </columnConstraints>

            <Label text="Subject *" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Label text="Semester *" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
            <Label text="Exam Type *" GridPane.columnIndex="2" GridPane.rowIndex="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #495057;" />

            <ComboBox fx:id="subjectComboBox" promptText="Choose Subject" 
                      GridPane.columnIndex="0" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 200; -fx-pref-height: 35;" />
            <ComboBox fx:id="semesterComboBox" promptText="Select Semester" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 150; -fx-pref-height: 35;" />
            <ComboBox fx:id="examTypeComboBox" promptText="Select Exam" 
                      GridPane.columnIndex="2" GridPane.rowIndex="1" 
                      style="-fx-pref-width: 150; -fx-pref-height: 35;" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Load Students" fx:id="loadStudentsBtn"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35; -fx-pref-width: 120;" />
        </HBox>
    </VBox>

    <!-- Student Marks Table Section -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="ðŸ‘¥ Student Marks List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <TableView fx:id="marksTable" style="-fx-pref-height: 400;">
            <columns>
                <TableColumn text="Student ID" fx:id="colStudentId" prefWidth="120" style="-fx-alignment: CENTER;" />
                <TableColumn text="Student Name" fx:id="colStudentName" prefWidth="250" />
                <TableColumn text="Marks Obtained" fx:id="colMarks" prefWidth="150" style="-fx-alignment: CENTER;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Quick Info -->
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
            <Label fx:id="totalStudentsLabel" text="Total Students: 0" style="-fx-text-fill: #495057; -fx-font-weight: bold;" />
            <Label fx:id="averageMarksLabel" text="Average Marks: 0" style="-fx-text-fill: #007bff; -fx-font-weight: bold;" />
        </HBox>
    </VBox>

    <!-- Action Buttons onAction="#saveMarks" -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="âœ… Ready to enter marks" 
               style="-fx-text-fill: #28a745; -fx-font-weight: bold; -fx-font-size: 13px;" />
        <Button text="Reset" fx:id="resetBtn"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-pref-height: 35; -fx-pref-width: 100;" />
        <Button text="Save Marks"  fx:id="saveMarksBtn"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-pref-height: 35; -fx-pref-width: 140;" />
    </HBox>
</VBox>
