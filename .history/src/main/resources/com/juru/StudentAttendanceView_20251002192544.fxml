<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juru.StudentAttendanceController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- Header -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
        <Label text="ðŸ“Š My Attendance Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label fx:id="studentNameLabel" text="Welcome, Student" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label fx:id="studentIdLabel" text="ID: 12345" style="-fx-font-size: 14px;" />
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox spacing="5" alignment="CENTER_RIGHT">
                <Label text="Overall Attendance" style="-fx-font-size: 14px;" />
                <Label fx:id="overallAttendanceLabel" text="92%" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Semester & Month Selection -->
    <HBox spacing="15">
        <ComboBox fx:id="semesterComboBox" promptText="Select Semester" style="-fx-pref-width: 150;" />
        <ComboBox fx:id="monthComboBox" promptText="Select Month" style="-fx-pref-width: 120;" />
        <ComboBox fx:id="yearComboBox" promptText="Select Year" style="-fx-pref-width: 100;" />
        <Button fx:id="applyFilterBtn" text="Load Attendance" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Tabs -->
    <TabPane fx:id="attendanceTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: transparent;">
        <!-- Monthly Attendance Tab -->
        <Tab text="ðŸ“… Monthly Attendance">
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <Label fx:id="monthYearLabel" text="October 2025" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- Weekly Header -->
                <HBox spacing="1" style="-fx-background-color: #495057; -fx-padding: 8;">
                    <Label text="Date" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                    <Label text="Period 1" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                    <Label text="Period 2" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                    <Label text="Period 3" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                    <Label text="Period 4" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                    <Label text="Period 5" style="-fx-pref-width: 60; -fx-text-fill: white; -fx-alignment: CENTER;" />
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-max-height: 400;">
                    <GridPane fx:id="monthlyGrid" hgap="1" vgap="1" style="-fx-background-color: #dee2e6;"/>
                </ScrollPane>

                <!-- Legend -->
                <HBox spacing="15" style="-fx-padding: 10 0 0 0;">
                    <Label text="Legend:" style="-fx-font-weight: bold;" />
                    <Rectangle width="20" height="20" fill="#4caf50" stroke="#388e3c"/>
                    <Label text="Present" />
                    <Rectangle width="20" height="20" fill="#f44336" stroke="#d32f2f"/>
                    <Label text="Absent" />
                    <Rectangle width="20" height="20" fill="#9e9e9e" stroke="#757575"/>
                    <Label text="Not Marked" />
                    <Rectangle width="20" height="20" fill="#ffffff" stroke="#bdbdbd"/>
                    <Label text="No Class" />
                    <Rectangle width="20" height="20" fill="#bbdefb" stroke="#64b5f6"/>
                    <Label text="Weekend" />
                </HBox>
            </VBox>
        </Tab>

        <!-- Subject-wise Tab -->
        <Tab text="ðŸ“š Subject-wise Report">
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                <TableView fx:id="attendanceTable" prefHeight="400">
                    <columns>
                        <TableColumn text="Subject Code" fx:id="colSubjectCode" prefWidth="120"/>
                        <TableColumn text="Subject Name" fx:id="colSubjectName" prefWidth="220"/>
                        <TableColumn text="Total Classes" fx:id="colTotal" prefWidth="100"/>
                        <TableColumn text="Attended" fx:id="colAttended" prefWidth="100"/>
                        <TableColumn text="Percentage" fx:id="colPercentage" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
