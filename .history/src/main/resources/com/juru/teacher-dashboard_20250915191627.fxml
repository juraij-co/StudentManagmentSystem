<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.*?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.juru.TeacherDashboardController">

    <top>
        <MenuBar>
            <Menu text="Attendance">
                <MenuItem text="Mark Attendance" onAction="#openMarkAttendance"/>
                <MenuItem text="View Attendance" onAction="#openViewAttendance"/>
            </Menu>
            <Menu text="Marks">
                <MenuItem text="Enter Marks" onAction="#openEnterMarks"/>
                <MenuItem text="View Marks" onAction="#openViewMarks"/>
            </Menu>
            <Menu text="Logout">
                <MenuItem text="Logout" onAction="#logout"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <Label fx:id="welcomeLabel" text="Welcome Teacher!" style="-fx-font-size: 18px; -fx-padding: 20;"/>
    </center>

</BorderPane>
