<?xml version="1.0" encoding="UTF-8"?>
<!-- Use generic JavaFX namespace for broader compatibility -->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.AddStudentFormController"
    spacing="10" style="-fx-padding: 20;">
    <Label text="Add New Student" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <TextField fx:id="studentName" promptText="Full Name" />
    <TextField fx:id="studentEmail" promptText="Email" />
    <TextField fx:id="studentUsername" promptText="Username" />
    <PasswordField fx:id="studentPassword" promptText="Password" />
    <ComboBox fx:id="studentCourse" promptText="Select Course" />
    <ComboBox fx:id="studentDepartment" promptText="Select Department" />
    <ComboBox fx:id="studentSemester" promptText="Select Semester" />
    <HBox spacing="10">
        <Button text="Save" onAction="#saveStudent" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
        <Button text="Cancel" onAction="#cancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
    </HBox>
</VBox>
