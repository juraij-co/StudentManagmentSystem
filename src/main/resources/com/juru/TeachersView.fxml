<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.juru.TeachersController"
      spacing="20" style="-fx-padding: 20;" alignment="TOP_CENTER">

    <!-- Header with back + add -->
    <HBox spacing="10" alignment="CENTER_LEFT">
    <Button fx:id="backButton" text="← Back"
        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Label text="Teacher Management"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add New Teacher" onAction="#showAddTeacherPopup"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>

    <!-- Search + Filters -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search teachers..." style="-fx-pref-width: 250;" />
        <Button text="Search" onAction="#searchTeachers"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Filter by:" style="-fx-font-weight: bold;" />
        <ComboBox fx:id="departmentFilter" promptText="Department" style="-fx-pref-width: 150;" />
        <ComboBox fx:id="courseFilter" promptText="Course" style="-fx-pref-width: 150;" />
        <ComboBox fx:id="semesterFilter" promptText="Semester" style="-fx-pref-width: 150;" />
        <Button text="Clear Filters" onAction="#clearFilters"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>

    <!-- Teachers Table -->
    <TableView fx:id="teachersTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
            <TableColumn fx:id="colCourses" text="Courses" prefWidth="200"/>
            <TableColumn fx:id="colSemesters" text="Semesters" prefWidth="120"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Status bar -->
    <HBox alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>

</VBox>
